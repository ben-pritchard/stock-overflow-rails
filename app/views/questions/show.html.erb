<h1> <%= @question.title %> </h1>

<h3>The question is:</h3>
<p>
  <%= @question.body %>
</p>

<%= render 'answers/answer' %>

<% if @question.answers.any? %>
  <% @question.answers.order(votes: :desc) %>
  <% @question.answers.each do |answer| %>
    <dl>
      <dt><%= answer.body %> VOTES: <%= answer.votes %></dt>
      <dd><%= link_to "upvote", question_answer_path(@question, answer) {:method => "patch"}, :class => "btn btn-xs"%></dd>
    </dl>
  <% end %>
<% end %>

<%= link_to "Back", questions_path, :class => "btn btn-primary" %>
